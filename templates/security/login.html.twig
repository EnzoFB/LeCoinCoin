{% extends 'base.html.twig' %}

{% block body %}

    <div class="login">
        <h1>Bonjour !</h1>
        <h4 style="font-weight: normal">Connectez-vous pour découvrir toutes nos fonctionnalités.</h4>

        <form action="{{ path('security_login') }}" method="post">
            <div class="form-group">
                <label for="login_email">Adresse Email</label>
                <input id="login_email" placeholder="Adresse email" required name="_username" type="text">
            </div>
            <div class="form-group">
                <label for="login_password">Mot de passe</label>
                <input id="login_password" placeholder="Mot de passe" required name="_password" type="password">
            </div>
            <br>
            <button type="submit">Connexion</button>
            <input type="hidden" name="_target_path" value="{{ target }}"/>
        </form>

        <p>Envie de nous rejoindre ? <a href="{{ path('security_registration') }}">Créer un compte</a></p>
    </div>

{% endblock %}